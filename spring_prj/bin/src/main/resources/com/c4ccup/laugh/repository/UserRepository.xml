<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.c4ccup.laugh.repository.UserRepository">

  <resultMap id="UserResultMap" type="com.c4ccup.laugh.domain.User">
    <result column="ID" property="id"/>
    <result column="mail_address" property="mail"/>
    <result column="password" property="password"/>
  </resultMap>

  <select id="findById" parameterType="int" resultMap="UserResultMap">
    SELECT
      *
    FROM
      user
    WHERE
      id = #{id}
  </select>

  <select id="findByMailAndPassword" parameterType="String" resultMap="UserResultMap">
    SELECT
      *
    FROM
      user
    WHERE
      user_address = #{mail}
    AND
      password = #{password}
  </select>
</mapper>